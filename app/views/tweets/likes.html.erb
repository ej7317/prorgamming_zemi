<div class="row">
    <div class="col-md-8">
        <h3><%= @title %></h3>
        <% if @users.any? %>
            <ul class="users follow">
                <% @users.each do |user| %>
                    <li id="tweet-<%= user.id %>">
                        <span class="user"><%=  link_to user.name, user %></span>
                    </li>
                <% end %>
            </ul>
        <% else %>
            <% if current_user?(@tweet.user) %>
               <ul>いないみたいだね、まぁ元気出してこ。</ul> 
            <% else %>
               <ul>そんなやついないってさw</ul> 
            <% end %>
        <% end %>
        
    </div>
</div>