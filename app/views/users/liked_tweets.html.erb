<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1><%= @user.name %></h1>
            <p><%= link_to "プロフィール", @user %></p>
            <p><b>ツイート:</b> <%= @user.tweets.count %></p>
        </section>
        <section class="stats">
            <div class="stats">
                <a href="<%= following_user_path(@user) %>">
                    <strong id="follower" class="stat">
                    <%= @user.follower.count %>
                    </strong>
                    フォロー
                </a>
                <a href="<%= followers_user_path(@user) %>">
                    <strong id="followed" class="stat">
                    <%= @user.followed.count %>
                    </strong>
                    フォロワー
                </a>
                <a href="<%= likes_path %>">
                 <strong id="likes" class="stat">
                 <%= @user.likes.count %>
                 </strong>
                                 いいね
                </a>
            </div>
            <% if @users.any? %>
            <div class="user_avatars">
                <% @users.each do |tweets| %>
                <% end %>
            </div>
            <% end %>
        </section>
    </aside>
    <div class="col-md-8">
        <h3><%= @title %></h3>
        <% if @users.any? %>
           <ol class="tweets">
            <% @users.each do |tweet| %>
              <li id="tweet-<%= tweet.id %>">
                  <span class="user"><%= link_to tweet.user.name, tweet.user %></span>
                  <span class="content"><%= tweet.content %></span>
                  <span class="timestamp">
                       投稿日 <%=time_ago_in_words(tweet.created_at) %> 前
                       <% if current_user?(tweet.user) %>
                         <%= link_to "編集", edit_tweet_path(tweet)%>
                         <%= link_to "削除", tweet, method: :delete,data: { confirm: "二言はないな？" } %>
                       <% end %>
                       <% if current_user.liked_by?(tweet.id) %>
                        <td><%= link_to '❤', unlike_path(tweet), method: :DELETE, remote: true %> <%= tweet.likes.count %></td>
                       <% else %>
                        <td><%= link_to '♡', like_path(tweet), method: :POST, remote: true %> <%= tweet.likes.count %></td>
                       <% end %>  
                  </span>
              </li>
            <% end %>
           </ol>
        <% else %>
            <% if current_user?(@user) %>
               <ul>いいねしてから来ようね。</ul> 
            <% else %>
               <ul>いいね無しだってさ、よっぽど世界に興味がない人なんだろうね</ul>  
            <% end %>      
        <% end %>
    </div>
</div>